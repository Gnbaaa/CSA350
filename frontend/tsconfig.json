{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["vitest/globals", "vitest/importMeta", "@testing-library/jest-dom"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/*.test.js"]
}

